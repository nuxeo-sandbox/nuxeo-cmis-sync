<?xml version="1.0"?>
<component name="org.nuxeo.ecm.sync.cmis.service.CMISRemoteServiceComponent">
  <implementation class="org.nuxeo.ecm.sync.cmis.service.CMISRemoteServiceComponent" />

  <documentation>
    @author Damon Brown (dbrown@nuxeo.com)
  </documentation>

  <service>
    <provide interface="org.nuxeo.ecm.sync.cmis.api.CMISRemoteService" />
  </service>

  <extension-point name="mapping">
    <documentation>
      example:
      <code>
        <mapping name="" xpath="" property="" doctype="" />
      </code>
    </documentation>
    <object class="org.nuxeo.ecm.sync.cmis.service.CMISMappingDescriptor" />
  </extension-point>

  <extension-point name="repository">
    <documentation>
      example:
      <code>
        <repository name="remoteNuxeo" enabled="true" binding="repository">
          <repository>default</repository>
          <url>http://some.server.com/nuxeo/json/cmis</url>
          <username>Administrator</username>
          <credentials>123</credentials>
          <property key=""></property>
          <!-- Example of a list of ACE mapping -->
          <ace-mapping>
            <remoteAce value="permToRead">Read</remoteAce>
            <remoteAce value="permToWrite">ReadWrite</remoteAce>
            <remoteAce value="permFprAll">Everything</remoteAce>
          </ace-mapping>
        </repository>
      </code>
    </documentation>
    <object class="org.nuxeo.ecm.sync.cmis.service.CMISRepositoryDescriptor" />
  </extension-point>

</component>
